<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_height="132dp"
        android:layout_width="166dp"
        android:orientation="vertical"
        >

        <RadioGroup
            android:id="@+id/color_group1"
            android:layout_width="166dp"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="@drawable/gongjulanbeijing"
            >
            <RadioButton
                android:id="@+id/yanse_lanse"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:button="@drawable/lanse"

                />
            <RadioButton
                android:id="@+id/yanse_danlanse"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:button="@drawable/danlanse"
                />
            <RadioButton
                android:id="@+id/yanse_tuceng"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:button="@drawable/tucheng"
                />
            <RadioButton
                android:id="@+id/yanse_luse"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:button="@drawable/luse"
                />

        </RadioGroup>


        <RadioGroup
            android:id="@+id/color_group2"
            android:layout_width="166dp"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="@drawable/gongjulanbeijing"
            >
            <RadioButton
                android:id="@+id/yanse_heise"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:button="@drawable/heise"
                />
            <RadioButton
                android:id="@+id/yanse_hongse"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@drawable/hongse"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                />
            <RadioButton
                android:id="@+id/yanse_chenghuangse"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:button="@drawable/chenghuangse"/>
            <RadioButton
                android:id="@+id/yanse_zise"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:button="@drawable/zise"
                />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/color_group3"
            android:layout_width="166dp"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="@drawable/gongjulanbeijing"
            >
            <RadioButton
                android:id="@+id/yanse_luise1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:button="@drawable/luse"

                />
            <RadioButton
                android:id="@+id/yanse_huangse"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@drawable/huangse"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                />
            <RadioButton
                android:id="@+id/yanse_rouse"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:button="@drawable/rouse"

                />
            <RadioButton
                android:id="@+id/yanse_fense"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:button="@drawable/fense"
                />

        </RadioGroup>

    </LinearLayout>

</LinearLayout>
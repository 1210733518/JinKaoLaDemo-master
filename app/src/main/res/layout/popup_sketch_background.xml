<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="166dp"
        android:layout_height="132dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/bg_group1"
            android:layout_width="166dp"
            android:layout_height="44dp"
            android:background="@drawable/gongjulanbeijing"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bg_shenlanse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@drawable/lanse"
                android:paddingLeft="9dp"
                android:paddingRight="9dp" />

            <RadioButton
                android:id="@+id/bg_danlanse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@drawable/danlanse"
                android:paddingLeft="9dp"
                android:paddingRight="9dp" />

            <RadioButton
                android:id="@+id/bg_tuceng"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@drawable/tucheng"
                android:paddingLeft="9dp"
                android:paddingRight="9dp" />

            <RadioButton
                android:id="@+id/bg_luse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@drawable/luse"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

        </RadioGroup>


        <RadioGroup
            android:id="@+id/bg_group2"
            android:layout_width="166dp"
            android:layout_height="44dp"
            android:background="@drawable/gongjulanbeijing"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bg_heise"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@drawable/heise"
                android:paddingLeft="9dp"
                android:paddingRight="9dp" />

            <RadioButton
                android:id="@+id/bg_hongse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:button="@drawable/hongse"
                android:paddingLeft="9dp"
                android:paddingRight="9dp" />

            <RadioButton
                android:id="@+id/bg_chenghuangse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@drawable/chenghuangse"
                android:paddingLeft="9dp"
                android:paddingRight="9dp" />

            <RadioButton
                android:id="@+id/bg_lanse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@drawable/zise"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/bg_group3"
            android:layout_width="166dp"
            android:layout_height="44dp"
            android:background="@drawable/gongjulanbeijing"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bg_luise1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@drawable/luse"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"

                />

            <RadioButton
                android:id="@+id/bg_huangse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:button="@drawable/huangse"
                android:paddingLeft="9dp"
                android:paddingRight="9dp" />

            <RadioButton
                android:id="@+id/bg_fense"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@drawable/rouse"
                android:paddingLeft="9dp"
                android:paddingRight="9dp" />

            <RadioButton
                android:id="@+id/bg_zise"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@drawable/fense"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

        </RadioGroup>

    </LinearLayout>

</LinearLayout>